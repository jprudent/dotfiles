" syntax coloration
syntax on

set hlsearch

" show line number
set number

" line numbers are relative to current line
set relativenumber

set wildmenu
set wildmode=list:longest,full

" disable arrow key for learning hjkl purpose
nnoremap <up>    <nop>
nnoremap <down>  <nop>
nnoremap <left>  <nop>
nnoremap <right> <nop>
